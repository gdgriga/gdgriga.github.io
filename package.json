{
  "name": "gdgriga.lv",
  "version": "1.0.0-alpha",
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "description": "GDG Riga amazing website",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "watchify -t [ babelify ] main.js -o site/assets/js/app.js -dv",
    "build:dev": "rm site/assets/js/app.js && ./node_modules/.bin/browserify -t [ babelify ] main.js -o ./site/assets/js/app.js",
    "build:prod": "rm site/assets/js/app.js && NODE_ENV=production ./node_modules/.bin/browserify -t [ babelify ] main.js | ./node_modules/.bin/uglifyjs - -c -o ./site/assets/js/app.js"
  },
  "author": "Sergey Kibish <sergey.kibish@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "es6-promise": "^3.1.2",
    "firebase": "^3.5.0",
    "isomorphic-fetch": "^2.2.1",
    "odometer": "^0.4.7"
  },
  "devDependencies": {
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "watchify": "^3.7.0",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "uglify-js": "^2.6.2"
  }
}
